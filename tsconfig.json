{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client","node","jest"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "baseUrl": "./",
    "strictNullChecks": true,
    "paths": {
      "@/*": ["src/render/*"],
      "root/*": ["/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "typings/*.d.ts"
  ]
}
